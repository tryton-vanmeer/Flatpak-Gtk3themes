{
  "id": "org.gtk.Gtk3theme.Ant-Dracula",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "1.6",
  "build-extension": true,
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Ant-Dracula",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -pm 755 /usr/share/runtime/share/themes/Ant-Dracula/gtk-3.0",
        "sed 's/url(\"..\\/assets/url(\"assets/g' gtk-3.20/gtk-dark.css > /usr/share/runtime/share/themes/Ant-Dracula/gtk-3.0/gtk.css",
        "cp -r assets /usr/share/runtime/share/themes/Ant-Dracula/gtk-3.0"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/EliverLara/Ant-Dracula/archive/v1.2.0.tar.gz",
          "sha256": "8f8336340eae4178f3f1b22d6c591342fbbe11d1d0d9159041ecb52818b25076"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Ant-Dracula.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Ant-Dracula --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Ant-Dracula"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Ant-Dracula.appdata.xml"
        }
      ]
    }
  ]
}
